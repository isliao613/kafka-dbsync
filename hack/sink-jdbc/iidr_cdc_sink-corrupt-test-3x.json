{
    "name": "iidr_cdc_sink_corrupt_test_3x",
    "config": {
        "connector.class": "com.example.kafka.connect.iidr.IidrCdcSinkConnector",
        "tasks.max": "1",

        "topics": "iidr.CDC.TEST_ORDERS",

        "connection.url": "jdbc:mariadb://dbrep-mariadb.dev.svc.cluster.local:3306/target_database",
        "connection.user": "root",
        "connection.password": "root_password",

        "table.name.format": "TEST_ORDERS",

        "iidr.errors.tolerance": "log",

        "default.timezone": "Asia/Taipei",

        "pk.mode": "record_key",
        "pk.fields": "ID",

        "auto.create": "false",
        "auto.evolve": "false",

        "batch.size": "100",
        "max.retries": "3",
        "retry.backoff.ms": "1000",
        "corrupt.events.table": "streaming_corrupt_events",

        "key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter.schemas.enable": "false",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false"
    }
}
